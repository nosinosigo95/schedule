<h2 class="center">予定の新規追加</h2>
<% if @task.errors.any? %>
    <p><%= pluralize(@task.errors.count, "error") %></p>
    <ul>
        <% @task.errors.each do |error| %>
            <li><%= error.full_message %></li>
        <% end %>
    </ul>
<% end %>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with model: @task do |f| %>
            <table>
                <tr>
                    <th><%= f.label :title, "タイトル" %> </th>
                    <td><%= f.text_field :title ,class: "text"%></td>
                </tr>
                <tr>
                    <th><%= f.label :start_date, "開始日" %></th>
                    <td><%= f.date_field :start_date, class: "datepicker"%></td>
                </tr>
                <tr>
                    <th><%= f.label :end_date, "終了日" %></th>
                    <td><%= f.date_field :end_date, class: "datepicker" %></td>
                </tr>
                <tr>
                    <td><%= f.check_box :all_day %></td>
                    <th><%= f.label  :all_day, "終日の場合はチェックを入れます"%></th>
                </tr>
                <tr>
                    <th><%= f.label :memo, "スケジュールメモ"%></th>
                    <td><%= f.text_area :memo %></td>
                </tr>
            </table>
            <ul class="form-buttons">
                <li class="form-button"><%= link_to "キャンセル", :tasks, class: "btn btnprimary cancel"%></li>
                <li class="form-button"><%= f.submit "保存", class: "btn btn-primary restore"%></li>
            </ul>
        <% end %>
    </div>
</div>
